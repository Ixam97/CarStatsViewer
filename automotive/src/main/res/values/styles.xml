<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_text_style">
        <item name="android:tag">bold</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:layout_marginHorizontal">20dp</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textFontWeight">@integer/title_font_weight</item>
    </style>
    <style name="title_back_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>
    <style name="menu_section_title_style">
        <item name="android:tag">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/section_title_font_size</item>
        <item name="android:textFontWeight">@integer/title_font_weight</item>
        <item name="android:textColor">?android:attr/colorControlActivated</item>
    </style>
    <style name="menu_standard_switch_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/std_row_height</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="menu_standard_row_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/std_row_height</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="menu_standard_row_label_disabled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/std_row_height</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:alpha">?android:attr/disabledAlpha</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="menu_row_top_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:layout_marginTop">3.5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="menu_row_content_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/reduced_font_size</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:layout_marginBottom">3.5dp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>
    <style name="menu_button_row_style">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/std_row_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
    </style>
    <style name="menu_button_row_style_disabled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/std_row_height</item>
        <item name="android:textColor">@color/disabled_tint</item>
        <item name="android:drawableTint">@color/disabled_tint</item>
        <item name="android:textSize">@dimen/std_font_size</item>
        <item name="android:textFontWeight">@integer/std_font_weight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
    </style>
    <style name="menu_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/disabled_tint</item>
    </style>
    <style name="menu_divider_style_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
    <style name="filler">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="libs_default_container">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="widget_bar">
        <item name ="android:layout_width">0dp</item>
        <item name ="android:layout_weight">1</item>
        <item name ="android:layout_height">5dp</item>
        <item name ="android:background">@color/disable_background</item>
    </style>
    <style name="redTextEdit" parent="AppTheme">
        <item name="colorAccent">@color/bad_red</item>
        <item name="android:colorControlHighlight">@color/bad_red</item>
        <item name="android:colorControlActivated">@color/bad_red</item>
    </style>
    <style name="spinner_text_size" parent="AppTheme">
        <item name="android:textSize">@dimen/std_font_size</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/stay_still</item>
        <item name="android:activityCloseEnterAnimation">@anim/stay_still</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>